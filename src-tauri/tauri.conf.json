{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MD Viewer",
  "version": "0.1.0",
  "identifier": "com.md.desk.viewer",
  "build": {
    "beforeDevCommand": "pnpm nuxt:dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm generate",
    "frontendDist": "../.output/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MD Viewer",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 300,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": {
      "icons/markdown.ico": "resources/markdown.ico"
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "mdown", "mkd"],
        "name": "Markdown",
        "mimeType": "text/markdown",
        "description": "Markdown Document",
        "role": "Viewer"
      }
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/hooks.nsh"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
